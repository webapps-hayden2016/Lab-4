@model Lab_4.Models.Person

<h2>Enter the person information</h2>
<div class="form">
    <form asp-action="PersonInfo" class="form-horizontal">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control"/>
            </div>
            <label asp-for="LastName" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control"/>
            </div>
        </div>
    </form>
</div>