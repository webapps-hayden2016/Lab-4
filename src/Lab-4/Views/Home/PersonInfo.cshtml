@model Lab_4.Models.Person

<h2>Enter the Person information.</h2>
<div class="form">
    <form asp-action="PersonInfo" class="form-horizontal">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2">First Name: </label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" autofocus/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <label asp-for="LastName" class="col-sm-2">Last Name: </label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" autofocus/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <label asp-for="BirthDate" class="col-sm-2">Birth Date: </label>
            <div class="col-sm-10">
                <input asp-for="BirthDate" type="date" class="form-control" autofocus/>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Add Person</button>
            </div>
        </div>
    </form>
</div>